{
    "name": "PIPOL Extension",
    "version": "1.0.0",
    "description": "PIPOL Extension",
    "manifest_version": 3,
    "author": "Mark Lester Bolotaolo",
    "action":{
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "matches": ["https://pipol.neda.gov.ph/project/*/edit/view_my_projects","https://pipol.neda.gov.ph/*"],
            "css": ["style.css"],
            "js": ["content-scripts.js"]
        }
    ],
    "permissions": [
        "activeTab",
        "scripting"
    ]
}